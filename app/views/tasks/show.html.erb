<div class="container">
  <div class="btn-toolbar justify-content-between pt-3">
    <div class="btn-group mb-3" role="group">
      <h1 class=""><%= @task.title %></h1>
    </div>
    <div class="btn-group">
      <p><%= link_to 'Edit this task', edit_task_path, class: 'btn btn btn-outline-success' %></p>
    </div>
  </div>

  <div class="callout callout-warning">
    <%= @task.details %>
  </div>
  <div class="form-group">
    <% if @task.completed %>
      <p><i class="fa-thin fa-square"></i>This task is completed</p>
    <% else %>
      <p><i class="fa-regular fa-square"></i>This task is not yet completed</p>
    <% end %>
  </div>
  <div class="form-group my-3">
    <p><%= link_to "Back to list", tasks_path%></p>
  </div>
</div>
