<div class="container">
  <div class="form-control">
    <h1 class="py-2"><%= @task.title %></h1>
      <p><%= link_to 'Edit this task', edit_task_path, class: 'btn btn-light' %>
          <i class="fa-solid fa-trash"></i>
      </p>
    <div></div>
  </div>
  <div class="callout callout-warning">
    <%= @task.details %>
  </div>
  <% if @task.completed %>
    <i class="fa-light fa-square-check">This task is completed</i>
  <% else %>
    <p>
      <i class="fa-regular fa-square"></i>
      This task is not yet completed
    </p>
  <% end %>
  <%= link_to "Back to list", tasks_path%>
</div>
