<div class="container">
  <h1>Edit Task</h1>
  <%= form_for @task do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :details %>
      <%= f.text_area :details, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.check_box :completed %>
      <%= f.label :completed %>
    </div>
    <%=  f.submit class: 'btn btn-secondary mt-2' %>
  <% end %>
  <%= link_to "Back to list", tasks_path %>
</div>
